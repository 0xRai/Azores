<% layout('layouts/boilerplate') %>
    <div class="form">
        <div class="form-title">
            <img class="form-logo" src="../images/azores.svg" alt="">
            <h1>Submit a new post</h1>
        </div>
        <form action="./" method="POST" class="form-validated">
            <div class="form-input">
                <input class="form-control important" type="text" name="post[title]" id="title" autofocus required placeholder="Title">
            </div>
            <div class="form-input">
                <textarea name="post[body]" id="body" cols="30" rows="10" placeholder="Body"></textarea>
            </div>

            <button class="form-button btn-primary">Submit</button>
        </form>
    </div>