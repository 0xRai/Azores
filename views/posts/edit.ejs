<% layout('layouts/boilerplate') %>
    <div class="form">
        <div class="form-title">
            <img class="form-logo" src="../images/azores.svg" alt="">
            <h1>Edit your post</h1>
        </div>
        <form action="../../posts/<%= post._id%>?_method=PUT" method="POST" class="form-validated">
            <div class="form-input">
                <input class="form-control important" type="text" name="post[title]" id="title" autofocus required placeholder="Title" value="<%= post.title %> ">
            </div>
            <div class="form-input">
                <textarea name="post[body]" id="body" cols="30" rows="10" placeholder="Body"><%- post.body %></textarea>
            </div>

            <button class="form-button btn-primary">Submit</button>
        </form>
    </div>