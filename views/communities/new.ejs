<% layout('layouts/boilerplate') %>
    <div class="form">
        <div class="form-title">
            <img class="form-logo" src="/images/azores.svg" alt="">
            <h1>New Community</h1>
        </div>
        <form action="/c" method="POST" class="form-validated">
            <div class="form-input">
                <input class="form-control important" type="text" name="community[name]" id="name" autofocus required placeholder="Community Name">
            </div>
            <button class="form-button btn-primary">Add Community</button>
        </form>
    </div>